<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_product_plan_container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/vert_margin"
    android:paddingRight="@dimen/vert_margin" >

    <TextView
        android:id="@+id/fragment_product_plan_username_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:text="@string/fragment_product_plan_username"
        android:textColor="@color/accent"
        android:textSize="@dimen/text_large" />

    <TextView
        android:id="@+id/fragment_product_plan_product_plan_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment_product_plan_product_plan"
        android:textColor="@color/base"
        android:textSize="@dimen/text_micro" />

</LinearLayout>