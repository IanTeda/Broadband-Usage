<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_footer_container"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/touch"
    android:gravity="center_vertical"
    android:background="@color/background_alt_dark"
    android:paddingLeft="@dimen/padding"
    android:paddingRight="@dimen/padding" >

    <TextView
        android:id="@+id/fragment_footer_last_sync_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="@string/fragment_footer_last_sync"
        android:textSize="@dimen/text_micro" />

    <TextView
        android:id="@+id/fragment_footer_data_period_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/fragment_footer_peroid"
        android:textSize="@dimen/text_micro" />

</RelativeLayout>