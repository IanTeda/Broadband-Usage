<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/vert_margin"
            android:paddingRight="@dimen/vert_margin" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:text="someone@iinet.net.au"
                android:textColor="@color/accent"
                android:textSize="@dimen/text_large" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Account Plan (Account Product)"
                android:textColor="@color/base"
                android:textSize="@dimen/text_micro" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin"
            android:src="@drawable/mockup_donut_chart" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:background="@color/background_alt"
            android:orientation="vertical"
            android:paddingLeft="@dimen/vert_margin"
            android:paddingRight="@dimen/vert_margin" >

            <TextView
                android:id="@+id/month_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="NOVEMBER 2012"
                android:textAllCaps="true"
                android:textColor="@color/accent"
                android:textSize="@dimen/text_xlarge"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/month_tv"
                android:background="@color/base" />

            <RelativeLayout
                android:id="@+id/days_container_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/days_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="11"
                    android:textColor="@color/accent"
                    android:textSize="@dimen/text_xxlarge"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/days_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/days_number_tv"
                    android:layout_toRightOf="@id/days_number_tv"
                    android:paddingLeft="@dimen/icon_margin"
                    android:text="16 DECEMBER 2012"
                    android:textAllCaps="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/base_light"
                    android:textSize="@dimen/text_small"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/days_until_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/days_number_tv"
                    android:paddingLeft="@dimen/icon_margin"
                    android:text="days until rollover"
                    android:textColor="@color/base"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/peak_container_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-12dp" >

                <TextView
                    android:id="@+id/peak_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="24"
                    android:textColor="@color/accent"
                    android:textSize="@dimen/text_xxlarge"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/peak_used_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/peak_number_tv"
                    android:layout_toRightOf="@id/peak_number_tv"
                    android:paddingLeft="@dimen/icon_margin"
                    android:text="USED DATA"
                    android:textAllCaps="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/base_light"
                    android:textSize="@dimen/text_small"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/peak_quota_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/peak_number_tv"
                    android:paddingLeft="@dimen/icon_margin"
                    android:text="/50 (GB) Peak"
                    android:textColor="@color/base"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/offpeak_container_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-12dp" >

                <TextView
                    android:id="@+id/offpeak_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="48"
                    android:textColor="@color/accent"
                    android:textSize="@dimen/text_xxlarge"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/offpeak_used"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/offpeak_number_tv"
                    android:layout_toRightOf="@id/offpeak_number_tv"
                    android:paddingLeft="@dimen/icon_margin"
                    android:text="USED DATA"
                    android:textAllCaps="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/base_light"
                    android:textSize="@dimen/text_small"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/offpeak_quota_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/offpeak_number_tv"
                    android:paddingLeft="@dimen/icon_margin"
                    android:text="/50 (GB) Offpeak"
                    android:textColor="@color/base"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/uptime_container_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-12dp" >

                <TextView
                    android:id="@+id/uptime_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="88"
                    android:textColor="@color/accent"
                    android:textSize="@dimen/text_xxlarge"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/uptime_ip_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/uptime_number_tv"
                    android:layout_toRightOf="@id/uptime_number_tv"
                    android:paddingLeft="@dimen/icon_margin"
                    android:text="250.56.2.312 (IP)"
                    android:textAllCaps="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/base_light"
                    android:textSize="@dimen/text_small"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/uptime_days_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/uptime_number_tv"
                    android:paddingLeft="@dimen/icon_margin"
                    android:text="days up time"
                    android:textColor="@color/base"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>