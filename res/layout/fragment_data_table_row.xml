<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_data_table_row_container"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/touch"
    android:layout_weight="1"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <View
        android:layout_width="@dimen/padding"
        android:layout_height="fill_parent"
        android:background="@color/flash_message_error_border" />

    <!-- Show the day number in period -->

    <TextView
        android:id="@+id/fragment_data_table_row_number"
        android:layout_width="34dp"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="01"
        android:textSize="@dimen/text_large"
        android:textStyle="italic" />

    <!-- Date column -->

    <RelativeLayout
        android:id="@+id/fragment_data_table_row_date_container"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center" >

        <TextView
            android:id="@+id/fragment_data_table_row_date"
            android:layout_width="30dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:gravity="right|center_vertical"
            android:text="29"
            android:textColor="@color/accent"
            android:textSize="@dimen/text_large" />

        <TextView
            android:id="@+id/fragment_data_table_row_date_day"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/fragment_data_table_row_date"
            android:gravity="center"
            android:text="MON"
            android:textSize="@dimen/text_micro"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragment_data_table_row_date_month"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_data_table_row_date_day"
            android:layout_marginTop="-6dp"
            android:layout_toRightOf="@+id/fragment_data_table_row_date"
            android:gravity="center"
            android:text="JAN"
            android:textColor="@color/text_light"
            android:textScaleX="1.3"
            android:textSize="@dimen/text_tiny" />
    </RelativeLayout>

    <!-- Peak data usage column -->

    <RelativeLayout
        android:id="@+id/fragment_data_table_row_peak_container"
        style="@style/listview_data_table_column" >

        <TextView
            android:id="@+id/fragment_data_table_row_peak_description"
            style="@style/listview_data_table_row_description" />

        <TextView
            android:id="@+id/fragment_data_table_row_peak_summary"
            style="@style/listview_data_table_row_summary"
            android:layout_below="@+id/fragment_data_table_row_peak_description"
            android:text="PEAK"
            android:textScaleX="1.1" />

        <TextView
            android:id="@+id/fragment_data_table_row_peak_number"
            style="@style/listview_data_table_row_number"
            android:layout_toLeftOf="@+id/fragment_data_table_row_peak_description" />
    </RelativeLayout>

    <!-- Offpeak data usage -->

    <RelativeLayout
        android:id="@+id/fragment_data_table_row_offpeak_container"
        style="@style/listview_data_table_column" >

        <TextView
            android:id="@+id/fragment_data_table_row_offpeak_description"
            style="@style/listview_data_table_row_description" />

        <TextView
            android:id="@+id/fragment_data_table_row_offpeak_summary"
            style="@style/listview_data_table_row_summary"
            android:layout_below="@+id/fragment_data_table_row_offpeak_description"
            android:text="OFFPEAK"
            android:textScaleX="0.9" />

        <TextView
            android:id="@+id/fragment_data_table_row_offpeak_number"
            style="@style/listview_data_table_row_number"
            android:layout_toLeftOf="@+id/fragment_data_table_row_offpeak_description" />
    </RelativeLayout>

    <!-- Uploads -->

    <RelativeLayout
        android:id="@+id/fragment_data_table_row_uploads_container"
        style="@style/listview_data_table_column" >

        <TextView
            android:id="@+id/fragment_data_table_row_uploads_description"
            style="@style/listview_data_table_row_description" />

        <TextView
            android:id="@+id/fragment_data_table_row_uploads_summary"
            style="@style/listview_data_table_row_summary"
            android:layout_below="@+id/fragment_data_table_row_uploads_description"
            android:text="UPLOADS"
            android:textScaleX="0.9" />

        <TextView
            android:id="@+id/fragment_data_table_row_uploads_number"
            style="@style/listview_data_table_row_number"
            android:layout_toLeftOf="@+id/fragment_data_table_row_uploads_description" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_data_table_row_freezone_container"
        style="@style/listview_data_table_column" >

        <TextView
            android:id="@+id/fragment_data_table_row_freezone_description"
            style="@style/listview_data_table_row_description" />

        <TextView
            android:id="@+id/fragment_data_table_row_freezone_summary"
            style="@style/listview_data_table_row_summary"
            android:layout_below="@+id/fragment_data_table_row_freezone_description"
            android:text="FREE"
            android:textScaleX="0.9" />

        <TextView
            android:id="@+id/fragment_data_table_row_freezone_number"
            style="@style/listview_data_table_row_number"
            android:layout_toLeftOf="@+id/fragment_data_table_row_freezone_description" />
    </RelativeLayout>

    <!-- Total daily usage -->

    <RelativeLayout
        android:id="@+id/fragment_data_table_row_total_container"
        style="@style/listview_data_table_column" >

        <TextView
            android:id="@+id/fragment_data_table_row_total_description"
            style="@style/listview_data_table_row_description" />

        <TextView
            android:id="@+id/fragment_data_table_row_total_summary"
            style="@style/listview_data_table_row_summary"
            android:layout_below="@+id/fragment_data_table_row_total_description"
            android:text="DAILY"
            android:textScaleX="0.9" />

        <TextView
            android:id="@+id/fragment_data_table_row_total_number"
            style="@style/listview_data_table_row_number"
            android:layout_toLeftOf="@+id/fragment_data_table_row_total_description" />
    </RelativeLayout>

</LinearLayout>