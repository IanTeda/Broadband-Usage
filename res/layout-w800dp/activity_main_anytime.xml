<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/vert_margin"
    android:paddingRight="@dimen/vert_margin"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
            android:id="@+id/activity_main_pager"
            android:visibility="gone"
            android:layout_height="0dp"
            android:layout_width="0dp"/>

    <com.viewpagerindicator.LinePageIndicator
            android:id="@+id/activity_main_pager_indicator"
            android:visibility="gone"
            android:layout_height="0dp"
            android:layout_width="0dp" />

    <fragment
        android:id="@+id/fragment_daily_usage"
        android:name="au.id.teda.broadband.usage.fragments.DataTableAnytimeFragment"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/vert_margin"
        tools:layout="@layout/fragment_daily_usage" />

</LinearLayout>