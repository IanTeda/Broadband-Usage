<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MyTheme.MainActivity"></style>
    
    <style name="MyTheme.MainActivity.Listview">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="MyTheme.MainActivity.Listview.Header">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_micro</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="MyTheme.MainActivity.Listview.Separator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/actionbar_separator</item>
    </style>
    
</resources>